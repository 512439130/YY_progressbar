<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.yy.yy_progressbar.view.HorizontalProgressbarWithProgress
            android:id="@+id/id_horizontal_progress01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:progress="0"
            yy:progress_reach_color="#ffff0000"
            yy:progress_text_color="#44ff0000"
            yy:progress_unreach_color="#44ff0000" />

        <com.yy.yy_progressbar.view.HorizontalProgressbarWithProgress
            android:id="@+id/id_horizontal_progress02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:progress="50"
            yy:progress_reach_color="#00ff00"
            yy:progress_text_color="#44ff0000"
            yy:progress_unreach_color="#4400ff00" />


        <com.yy.yy_progressbar.view.HorizontalProgressbarWithProgress
            android:id="@+id/id_horizontal_progress03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:progress="50"
            yy:progress_reach_color="#0000ff"
            yy:progress_text_color="#44ff0000"
            yy:progress_unreach_color="#440000ff" />


        <com.yy.yy_progressbar.view.RoundProgressBarWithProgress
            android:id="@+id/id_round_progress01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:progress="0"
            yy:progress_text_color="#ff000000"
            yy:progress_text_size="30sp"
            yy:progress_unreach_color="#44ff0000"
            yy:radius="60dp" />

        <com.yy.yy_progressbar.view.RoundProgressBarWithProgress
            android:id="@+id/id_round_progress02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:progress="50"
            yy:progress_text_color="#ff000000"
            yy:progress_text_size="30sp"
            yy:progress_unreach_color="#55000000"
            yy:radius="60dp" />

    </LinearLayout>
</ScrollView>
